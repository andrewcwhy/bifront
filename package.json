        "format": "prettier --write .",
        "editor": "bun --hot scripts/dev.ts"
    },
    "bugs": {
        "url": "https://github.com/andrewcwhy/bifront/issues"
    },
    "homepage": "https://github.com/andrewcwhy/bifront#readme",
    "types": "module",
    "dependencies": {
        "@mdx-js/mdx": "^3.1.0",
        "clsx": "^2.1.1",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-icons": "^5.5.0",
        "react-markdown": "^10.1.0",
        "react-syntax-highlighter": "^15.6.1",
        "rehype-raw": "^7.0.0",
        "remark-gfm": "^4.0.1"
    },
    "devDependencies": {
        "@types/bun": "^1.2.9",
        "@types/react": "^19.1.1",
        "@types/react-dom": "^19.1.2",
        "bun": "^1.2.9",
        "bun-plugin-tailwind": "^0.0.15",
        "prettier": "^3.5.3",
        "tailwindcss": "^4.1.3",
        "typescript": "^5.8.3"

{
    "name": "bifront",
    "version": "1.0.0",
    "description": "A live browser editor dev server",
    "keywords": [
        "live-editor",
        "live-preview",
        "editing",
        "browser-editor"
    ],
    "author": "Andrew Christian Young",
    "license": "MIT",
    "bin": {
        "bifront": "./bin/index.js"
    },
